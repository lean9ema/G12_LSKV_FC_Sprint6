<!DOCTYPE html>
<html lang="es">
    <%- include( '../partials/head') %>
    
    <body>
    
        <%- include('../partials/header') %>
        <main class="charger">
            <div>
                <form action="?_method=PUT" method="POST" enctype="multipart/form-data">
                    <fieldset class="form-prod-char">
                        <legend class="legend-formulario">Editar producto</legend>
                        
                        <label for="name">Nombre
                            <input type="text" id = "name" value="<%=product.name %>" name="name">
                        </label>
                            
                        
                        <label for="price">Precio
                            <input type="number" id="price" name="price" value="<%=product.price %>">
                        </label>
                        
                        <label for="category">Categoria: 
                            <select name="category" id="category">
                                <% categories.forEach(category => { %>
                                    <% if( category == product.idCategory ){ %>
                                        <option value="<%=category.id%>" selected><%=category.name%></option>
                                    <% }else{ %>
                                        <option value="<%=category.id%>"><%=categories.name%></option>
                                    <% }; %>
                                <% }) %>
                            </select>
                         </label>

                       
                         <label for="colours">Colores:
                            <div class="color">
                                
                                <%  for(let i=0;i<colours.length;i++){ %>
                                    <div class="check-c-s">
                                    <% if( colours[i].id == product.idColour ){ %>
                                        <input class="chk" type="checkbox" value="<%=colours[i].id %>" name="color" id="colour<%=colours[i].id %>" checked>
                                        <label class="lbl" for = "colour<%=colours[i].name %>">
                                            <img src = "/images/colores/<%= colours[i].urlColour %>.jpg"">
                                        </label> 
                                    <% }else{ %> 
                                        <input class="chk" type="checkbox" value="<%=colours[i].id %>" name="color" id="colour<%=colours[i].id %>">
                                        <label class="lbl" for = "colour<%=colours[i].id %>">
                                            <img src = "/images/colores/<%= colours[i].urlColour %>.jpg"">
                                        </label> 
                                    <% }; %>
                                    </div>
                                <% }; %>  

                            </div>
                        </label>
                        
                        <label>Talles:
                            <div class="size">
                                <% sizes.forEach(size => { %>
                                    <div class="check-size">
                                        <% if( size == (product.idSize)){ %>
                                        <input class="chk"type="checkbox" value="<%= size.id %>"  name="sizes" id ="size<%= size.id %>" checked>
                                        <label class="lbl" for = "size<%= size.id %>"><%= size.name %></label>
                                        <% }else{ %> 
                                            <input class="chk"type="checkbox" value="<%= size.id %>"  name="sizes" id ="size<%= size.id %>">
                                            <label class="lbl" for = "size<%= size.id %>"><%= size.name %></label>
                                        <% } %> 
                                    </div>
                                <% }) %> 
                            </div>
                        </label>

                        <label for="image">Imagen principal:
                            <img src="/images/products/<%= imgP.urlName %>" alt="" width="50px">
                            <input type="file" name="image" id="image">
                        </label>



                        <label for="description">Descripci√≥n: 
                            <textarea name="description" id="description" cols="30" rows="5" class="description"><%=product.description%></textarea>
                        </label>

                        <div class="bt">
                            <input type="submit" value="Editar" class="style-button">
                        </div>

                    </fieldset>
                </form>
            </div>
        </main>


        <%- include('../partials/footer') %> 
    </body>  